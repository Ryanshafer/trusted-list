---
import logo from "../../assets/logo-light.svg?url";

const currentYear = new Date().getFullYear();
---

<footer
    class="relative z-10 bg-stone-50/25 backdrop-blur-sm border-t border-stone-200/60 shadow-[0_-10px_40px_rgba(15,23,42,0.08)] py-12"
>
    <div
        class="container mx-auto px-4 md:px-6 flex flex-col md:flex-row items-center justify-between gap-6 text-slate-700"
    >
        <div class="flex items-center gap-2">
            <img
                src={logo}
                alt="The Trusted List Logo"
                class="h-8 w-auto opacity-90"
            />
        </div>

        <div class="flex items-center gap-8 text-sm">
            <a href="/privacy" class="hover:text-slate-900 transition-colors"
                >Privacy Policy</a
            >
            <a href="/terms" class="hover:text-slate-900 transition-colors"
                >Terms of Service</a
            >
        </div>

        <div class="text-sm text-slate-500">
            &copy; {currentYear} The Trusted List.
        </div>
    </div>
</footer>
